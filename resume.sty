% Sections formatting
\titleformat{\section}{\vspace{-2pt minus 4pt}\scshape\raggedright\large}{}{0em}{}
  [\color{black}\titlerule\vspace{1pt}]  % \titleformat{command}{format}{label}{sep}{before-code}[after-code]

\titlespacing{\section}{0pt}{2pt plus 4pt minus 6pt}{4pt plus 2pt minus 2pt}  % adjust spacing as needed: 1st value is left, 2nd is top, 3rd is bottom  

% list settings: leftmargin, topsep, parsep (multi-paragraph separation), before, after, itemsep
% 1st-level itemize: resumeSubHeadingList, alphabetList, arabicList, bulletedList, simpleList
\setlist[itemize]{leftmargin=0.15in, itemsep=-2pt, topsep=3pt, parsep=2pt}
\setlist[enumerate]{itemsep=-2pt}
% 2nd-level itemize: resumeItemList
\setlist[itemize,2]{leftmargin=0.3in, before=\vspace{-5pt}\small, after=\vspace{-1pt}, itemsep=0pt}

\newcommand{\resumeSubHeadingListStart}{\begin{itemize}[leftmargin=0.05in, itemsep=-3pt, label=, before=]}  % before= is used to remove the default topsep, and label= is used to remove the default label
\newcommand{\resumeSubHeadingListEnd}{\end{itemize}}

%% modularized list commands (customizable)
\newcommand{\resumeItemListStart}[1][]{\begin{itemize}[leftmargin=2em, #1]}
\newcommand{\resumeItemListEnd}{\end{itemize}}
\newcommand{\bulletedListStart}[1][]{\begin{itemize}[leftmargin=2em, #1]}
\newcommand{\bulletedListEnd}{\end{itemize}}
\newcommand{\simpleListStart}[1][0.15in]{\begin{itemize}[leftmargin=#1, label={}]}  % like resumeItemListStart but customizable leftmargin
\newcommand{\simpleListEnd}{\end{itemize}}

%% 
\newcommand{\arabicListStart}{\begin{enumerate}[label={\textbf{[\arabic*]}}]}
\newcommand{\arabicListEnd}{\end{enumerate}}
\newcommand{\alphabetListStart}{\begin{enumerate}[label={\textbf{[\alph*]}}]}
\newcommand{\alphabetListEnd}{\end{enumerate}}


\newcommand{\resumeSubheading}[4]{
  % \vspace{-2pt}
  \item
    \begin{tabular*}{0.97\textwidth}[t]{l@{\extracolsep{\fill}}r}
      \textbf{#1} & #2 \\
      \textit{\small#3} & \textit{\small #4} \\
    \end{tabular*}\vspace{1pt}
    % \vspace{-7pt}
}

% by cwhsu with 5 arguments, 3 on the first line, 2 on the second line
\newcommand{\resumeSubheadingII}[5]{
  % \vspace{-2pt}
  \item
    \begin{tabular*}{0.97\textwidth}[t]{l@{\extracolsep{\fill}}l@{\extracolsep{\fill}}r}
      \textbf{#1} & \textsl{\small#5} & #2 \\
      \textit{\small#3} & \textit{} & \textit{\small#4} \\
    \end{tabular*}
    % \vspace{-7pt}
}

\newcommand{\resumeSubheadingIII}[2]{
  \item
    \begin{tabular*}{0.97\textwidth}[t]{l@{\extracolsep{\fill}}r}
      \textbf{#1} & \small{#2} \\
    \end{tabular*}
    % \vspace{-7pt}
}

\newcommand{\resumeSubSubheading}[2]{
    \item
    \begin{tabular*}{0.97\textwidth}{l@{\extracolsep{\fill}}r}
      \textit{\small#1} & \textit{\small #2} \\
    \end{tabular*}
